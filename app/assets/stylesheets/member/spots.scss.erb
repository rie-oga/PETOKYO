//文字下線
.under-line {
	position: relative;
    display: inline-block;
}
.under-line:before {
  content: '';
  position: absolute;
  left: 50%;
  bottom: -10px;/*線の上下位置*/
  display: inline-block;
  width: 50px;/*線の長さ*/
  height: 3px;/*線の太さ*/
  -webkit-transform: translateX(-50%);
  transform: translateX(-10%);/*位置調整*/
  background-color: #EC715F;/*線の色*/
  border-radius: 2px;
}
