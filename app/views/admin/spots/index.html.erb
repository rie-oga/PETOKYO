<div class ="container">
	<div class="row">
		<h1>Spot一覧</h1>
			<table class="table">
				<thead>
					<tr>
						<th>#</th>
						<th>Spot</th>
						<th>Image</th>
						<th>投稿者</th>
						<th>Date</th>
						<th>紹介文</th>
					</tr>
				</thead>
				<tbody>
					<% @spots.each do |spot| %>
						<tr>
							<td><%= spot.id %></td>
							<td><%= spot.name %></td>
							<td><%= attachment_image_tag spot, :image, :fill, 40, 40, fallback: "no_image.jpg", size:'200x200' %></td>
							<td><%= spot.member.name %></td>
							<td><%= spot.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
							<td><%= spot.introduction %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
	</div>
</div>