<div class="container member-session">
  <div class="row">
    <div class="col-sm-4">
    </div>
    <div class="col-sm-4">
        <%= flash[:danger] %>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="field">
            <h7>Email</h7>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"メールアドレス", class:"col-sm-12" %>
          </div>
          <div class="field">
            <h7>Password</h7>
            <%= f.password_field :password, autocomplete: "current-password", placeholder:"パスワード", class:"col-sm-12" %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
          <div class="actions">
            <%= f.submit "ログインする", class:"col-sm-12 btn btn-primary" %>
          </div>
        <% end %>

        <%= render "member/shared/links" %>

    </div>
    <div class="col-sm-4">
    </div>
  </div>
</div>
