<div class="container mypage">
	<div class="row">
  　<div class="col-sm-4">
    </div>
    <div class="col-sm-4">
  		<%= form_with(model: @member, local: true) do |form| %>
  				<div class="field">
      				<%= form.label :Name %><br>
      				<%= form.text_field :name, autofocus: true,class:"col-sm-12" %>
    				</div>
    				<div class="field">
      				<%= form.label :Nickname %><br>
      				<%= form.text_field :nickname,class:"col-sm-12" %>
    				</div>
  				<div class="field">
      				<%= form.label :メールアドレス %><br>
      				<%= form.email_field :email, autocomplete: "email",class:"col-sm-12" %>
    				</div>
    				<div class="action">
    					<%= form.submit "変更",class:"col-sm-12" %>
    				</div>
  		<% end %>
  	</div>
    <div class="col-sm-4">
    </div>
  </div>
</div>
