<div class="container mypage">
	<div class="row">
  　<div class="col-sm-4">
    </div>
    <div class="col-sm-4">
      <div class="panel panel-default">
          <div class="panel-heading">プロフィール編集</div>
            <div class="panel-body">
              <%= form_with(model: @member, url: 'member_member_path', local: true) do |form| %>
                <div class="form-group">
                  <label class="control-label">Image</label>
                  <%= form.attachment_field :profile_image,class:'form-controll' %>
                </div>
                <div class="form-group">
                  <label class="control-label">Name</label>
                  <%= form.text_field :name, autofocus: true,class:'form-control' %>
                </div>
                <div class="form-group">
                  <label class="control-label">Nickname</label>
                  <%= form.text_field :nickname,class:'form-control' %>
                </div>
                <div class="form-group">
                  <label class="control-label">Email</label>
                  <%= form.text_field :email, autocomplete:"email",class:'form-control' %>
                </div>
                <div class="form-group">
                  <%= form.submit "変更する",class:"form-control btn btn-primary" %>
                </div>
              <% end %>
              <%= link_to "退会する", member_members_unsubscribe_path %>
            </div>
      </div>
  	</div>
    <div class="col-sm-4">
    </div>
  </div>
</div>
