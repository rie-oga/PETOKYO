<div class ="container">
	<div class="row">
		<h1>投稿履歴一覧</h1>
			<table class="table">
				<thead>
					<tr>
						<th>Date</th>
						<th>Image</th>
						<th>Spot</th>
						<th>Introduction</th>
					</tr>
				</thead>
				<tbody>
					<% @spots.each do |spot| %>
						<tr>
							<td><%= spot.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
							<td><%= attachment_image_tag spot, :image, :fill, 40, 40, fallback: "no_image.jpg", size:'200x200' %></td>
							<td><%= spot.name %></td>
							<td><%= spot.introduction %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		<%= link_to "編集する", root_path, class: "btn btn-primary" %>
		<%= link_to "投稿を削除する", root_path, class: "btn btn-primary" %>
	</div>
</div>