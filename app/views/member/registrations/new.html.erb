<div class="container">
   <div class="row">
      <h2>新規登録</h2>

      <%= form_for(resource, as: resource_name, url: member_registration_path(resource_name)) do |f| %>
      <%#= form_with model: @member_new, url: member_registration_path, id: 'new_member', class: 'new_member', local: true do |f| %>
          <%= render "member/shared/error_messages", resource: resource %>
          <div class="field">
              <%= f.label :Name %><br/>
              <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder:"名前" %>
          </div>

          <div class="field">
              <%= f.label :Nickname %><br/>
              <%= f.text_field :nick_name, placeholder:"ニックネーム" %>
          </div>

          <div class="field">
              <%= f.label :Email %><br/>
              <%= f.email_field :email, autocomplete: "email", placeholder:"メールアドレス" %>
          </div>

          <div class="field">
              <%= f.label :Password %>
              <% if @minimum_password_length %>
              <em>(英数字<%= @minimum_password_length %>文字以上)</em>
              <% end %><br/>
              <%= f.password_field :password, autocomplete: "new-password", placeholder:"パスワード" %>
          </div>

          <div class="field">
              <%= f.label :Password %><br/>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"パスワード確認" %>
          </div>

          <div class="actions">
              <%= f.submit "登録" %>
              <P>※ニックネームのみ公開されます</P>
          </div>
      <% end %>
    </div>
</div>

<%= render "member/shared/links" %>
