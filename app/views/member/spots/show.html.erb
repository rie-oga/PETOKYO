<div class="container">
		<div class="row">
			<div class="spot-name-rank" id="fixed2">
				<%= render partial: 'left_side_bar', locals: { genre: @genre, spots: @spots } %>
			</div>
			<div class="col-sm-3">
			</div>
			<div class="col-sm-9 show-subject">
				<h1><%= @spot.name %></h1>
					<nav class="nav-show">
				      	<ul class="nav-list">
					        <li class="nav-list-item">
					          <button class="comment-click">コメント</button>
					        </li>
					        <li class="nav-list-item">
					       		<button class="img-click">写真</button>
					        </li>
				      	</ul>
				    </nav>
				    <!-- 写真一覧 -->
				    <div class="img-box">
						<% if @spot.spot_images.present? %>
							<% @spot_images.each do |image| %>
								<div class="list-box">
								    <%= attachment_image_tag image, :image, :fill, 250, 250 %>
								</div>
							<% end %>
						<% end %>
					</div>
					<%= paginate @spot_images %>
					<!-- コメント一覧 -->
					<div class="comment-box">
			 			<%= render partial: 'comment_index', locals: {comments: @comments} %>
			 		</div>

			</div>

				<%= link_to new_member_spot_path, class:"btn" do %>
					<i class="fas fa-plus-circle">投稿する</i>
				<% end %>
				<%= @spot.address %>
				<%= @spot.url %>
			<!-- コメント投稿フォーム -->
				<%= render partial: 'comment_form', locals: { comment: @comment } %>
			</div>
			<div class="col-sm-1">
			</div>
		</div>
 </div>