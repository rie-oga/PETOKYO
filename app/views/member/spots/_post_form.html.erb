	<div class="row">
		<div class="col-sm-3">
		</div>
		<div class="col-sm-6">
			<div class="panel panel-default">
        		<div class="panel-heading"></div>
        			<div class="panel-body">
						<%= form_with(model: [:member, spot], local: true) do |form| %>

						<!--エラーメッセージ-->
  						<%= render 'layouts/errors', obj: spot %>

							<div class="form-group">
								<label class="control-label">ジャンル選択</label>
			  					<%= form.collection_select :genre_id, Genre.all, :id, :name, prompt: "ジャンルを選ぶ" %>
			  				</div>
			  				<div class="form-group">
			  					<label class="control-label">画像を選ぶ</label>
			  					<%= form.attachment_field :spot_images_images, multiple: true %>※複数選択可能です。<!-- multiple: trueの記述で、複数画像選択可能になる -->
			  				</div>
			  				<div class="form-group">
			  					<label class="control-label">名所</label>
			  					<%= form.text_field :name,class:'form-control' %>
			  				</div>
			  				<div class="form-group">
			  					<label class="control-label">最寄り駅</label>
			  					<%= form.text_field :address, placeholder:"〇〇駅",class:'form-control' %>
			  				</div>
			  				<div class="form-group">
			  					<label class="control-label">紹介文</label>
			  					<%= form.text_area :introduction,class:'form-control' %>
			  				</div>
			  				<div class="form-group">
			  					<%= form.submit '投稿',class: 'btn btn-primary' %>
			  				</div>
			  			<% end %>
			  		</div>
			</div>
		</div>
	</div>