<div class="row comment-index">

<% if comments.present? %>
  <% comments.each do |comment| %>
    <div class="row">
      <div class="col-md-2">
        <span class="user-img2"><img src="<%= asset_path('moai.jpg') %>"></span>
        <p><%= comment.member.name %></p>
      </div>
      <div class="col-md-3">
        <div class=" posts-content">
          <!--星評価-->
          <div id="star-rate-<%= comment.id %>"><!-- 星表示 --></div><!-- 繰り返し処理を実行してもidを一意に保てるようにpost.idを埋め込む-->
          <script>
          $('#star-rate-<%= comment.id %>').raty({
            size: 36,
            starOff: '<%= asset_path('star-off.png') %>',
            starOn : '<%= asset_path('star-on.png') %>',
            starHalf: '<%= asset_path('star-half.png') %>',
            half: true,//星の半分入力
            readOnly: true,//読み取り専用
            score: <%= comment.rate %>//星の入力値を読み込む
          });
          </script>
        <!--/星評価-->
          <h5>評価：<%= comment.rate %>点 </h5>
          <p class="date"><!-- lメソッド：時間を表示 --><%= l comment.created_at, format: :short %></p>
        </div>
      </div>
      <div class="col-md-6">
        <p><%= comment.comment %></p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-9">
      </div>
      <% if current_member == comment.member || current_admin %>
        <div class="col-md-1 edit-button">
          <%= link_to '編集', member_member_path(current_member), method: :get, class:'btn btn-default' %>
        </div>
        <div class="col-md-1 edit-button">
          <%= link_to '削除', member_comment_path(comment.id), method: :delete, data: { confirm: '本当に消しますか？'},class:'btn btn-default' %>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>

</div>