	<div class="row">
		<% @spots.each do |spot| %>
			<div class="col-sm-3">
				iiiiiiiiiiiiiiiiiiiiiiiiiiiiii
			</div>
			<div class="col-sm-9">
				<table clas="table">
					<tr>
						<% if spot.spot_images.present? %>
			  				<td><% spot.spot_images.each do |image| %>
			    				<%= attachment_image_tag image, :image, :fill, 100, 200 %></td>
			    			<% end %>
			  			<% else %>
			    			<td><%= image_tag 'anea.jpg', size: '500x500' %></td>
						<% end %>
					</tr>
					<tr>
						<td><%= spot.name %></td>
					</tr>
					<tr>
						<td><%= spot.address %></td>
					</tr>
					<tr>
						<td><%= spot.url %></td>
					</tr>
					<tr>
						<td><%= spot.introduction %></td>
					</tr>
					<tr>
						<td><%= link_to 'レビューする' %></td>
					</tr>
				</table>
			</div>
		<% end %>
	</div>
