<div class="container">
		<div class="row">
			<div class="col-sm-3">
					<% if params[:genre_id] %>
						<h3><%= @genre.name %>ランキング</h3>
							<% @spots.each do |spot| %>
								<nav>
									<ul>
										<li><%= spot.name %></li>
									</ul>
								</nav>
							<% end %>
					<% else %>
						<h3>総合ランキング</h3>
						<% @spots.each do |spot| %>
							<nav>
								<ul>
									<li><%= spot.name %></li>
								</ul>
							</nav>
						<% end %>
					<% end %>
			</div>
		    <div class="col-sm-9">
		    	<%= render 'spots_ranking', spots: @spots %>
		    </div>
		</div>
</div>